<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MealTrackerActivity">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FF4500"
                android:layout_marginBottom="24dp">
                <!--<ImageView-->
                    <!--android:layout_marginTop="20dp"-->
                    <!--android:layout_width="50dp"-->
                    <!--android:layout_height="50dp"-->
                    <!--android:id="@+id/calorieCount"-->
                    <!--android:src='@drawable/calories'/>-->
                <TextView
                    android:id="@+id/title_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Health Check"
                    android:layout_gravity="center_horizontal"
                    android:textSize="55sp"
                    android:background="#FFA500"
                    android:textColor="#FFFAFA"
                    android:gravity="center_horizontal"
                    android:layout_margin="8dp"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/food"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="42dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text='Breakfast'
                    android:layout_alignParentLeft="true"
                    android:textStyle="bold"
                    android:textSize="28sp"
                    android:paddingLeft="20dp"
                    android:id="@+id/bk"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/text1"
                    android:layout_marginTop="40dp"
                    android:text=""
                    android:paddingLeft="20dp"
                    android:textSize="18sp"
                    android:layout_toRightOf="@id/bk" />

                <Button
                    android:id='@+id/breakfast'
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="30dp"
                    android:layout_alignParentRight="true"
                    android:padding="10dp"
                    android:textSize="20sp"
                    android:paddingRight="60dp"
                    android:text="+" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text='Lunch'
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/breakfast"
                    android:paddingLeft="20dp"
                    android:textStyle="bold"
                    android:textSize="28sp"
                    android:id="@+id/lch"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/text2"
                    android:layout_below="@id/breakfast"
                    android:text=""
                    android:paddingLeft="20dp"
                    android:textSize="18sp"
                    android:layout_marginTop="40dp"
                    android:layout_toRightOf="@id/lch" />

                <Button
                    android:id='@+id/lunch'
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="30dp"
                    android:layout_below="@id/breakfast"
                    android:layout_alignParentRight="true"
                    android:padding="10dp"
                    android:textSize="20sp"
                    android:paddingRight="60dp"
                    android:text="+" />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text='Snacks'
                    android:layout_below="@id/lunch"
                    android:paddingLeft="20dp"
                    android:layout_alignParentLeft="true"
                    android:textStyle="bold"
                    android:textSize="28sp"
                    android:id="@+id/snk"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/text3"
                    android:layout_below="@id/lunch"
                    android:text=""
                    android:paddingLeft="20dp"
                    android:textSize="18sp"
                    android:layout_marginTop="40dp"
                    android:layout_toRightOf="@id/snk" />

                <Button
                    android:id='@+id/snacks'
                    android:layout_width="48dp"
                    android:layout_below="@id/lunch"
                    android:layout_height="48dp"
                    android:layout_marginTop="30dp"
                    android:layout_alignParentRight="true"
                    android:padding="10dp"
                    android:textSize="20sp"
                    android:paddingRight="60dp"
                    android:text="+" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text='Dinner'
                    android:layout_below="@id/snacks"
                    android:layout_alignParentLeft="true"
                    android:textStyle="bold"
                    android:textSize="28sp"
                    android:paddingLeft="20dp"
                    android:id="@+id/din"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/text4"
                    android:text=""
                    android:paddingLeft="20dp"
                    android:textSize="18sp"
                    android:layout_marginTop="40dp"
                    android:layout_toRightOf="@id/din"
                    android:layout_below="@id/snacks" />

                <Button
                    android:id='@+id/dinner'
                    android:layout_width="48dp"
                    android:layout_below="@id/snacks"
                    android:layout_height="48dp"
                    android:layout_marginTop="30dp"
                    android:layout_alignParentRight="true"
                    android:padding="10dp"
                    android:paddingRight="60dp"
                    android:textSize="20sp"
                    android:text="+" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id='@+id/submit'
                    android:layout_marginTop="30dp"
                    android:padding="10dp"
                    android:textSize="20sp"
                    android:layout_centerHorizontal="true"
                    android:text="Total Calories"
                    android:layout_below="@+id/dinner"/>

            </RelativeLayout>
        </LinearLayout>

    </ScrollView>


</LinearLayout>