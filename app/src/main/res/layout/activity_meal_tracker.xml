<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MealTrackerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FF4500"
        android:layout_marginBottom="24dp">
        <TextView
            android:id="@+id/title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Health Check"
            android:layout_gravity="center_horizontal"
            android:textSize="55sp"
            android:background="#FFA500"
            android:textColor="#FFFAFA"
            android:gravity="center_horizontal"
            android:layout_margin="8dp"/>

        <!--please add an icon or a toolbar at the top-->
        <TextView
            android:id="@+id/cal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0 of 1450 Cal"
            android:gravity="center_horizontal"
            android:textSize="45sp"
            android:textColor="#FFFAFA"
            android:layout_margin="8dp"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/food"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="42dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFAFA"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/breakfast_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="32dp"
                android:text='Breakfast'
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/breakfast_cal_text_view"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="60dp"
                android:layout_toRightOf="@id/breakfast_text_view"
                android:text="cal"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id='@+id/breakfast'
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_toRightOf="@id/breakfast_cal_text_view"
                android:layout_marginRight="8dp"
                android:padding="10dp"
                android:text="+"
                android:textSize="20sp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/snacks_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="32dp"
                android:text='Snacks'
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/snacks_cal_text_view"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="60dp"
                android:layout_toRightOf="@id/snacks_text_view"
                android:text="cal"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id='@+id/snacks'
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_toRightOf="@id/snacks_cal_text_view"
                android:layout_marginLeft="30dp"
                android:padding="10dp"
                android:text="+"
                android:textSize="20sp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/lunch_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="32dp"
                android:text='Lunch'
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lunch_cal_text_view"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="60dp"
                android:layout_toRightOf="@id/lunch_text_view"
                android:text="cal"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id='@+id/lunch'
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_toRightOf="@id/lunch_cal_text_view"
                android:layout_marginLeft="45dp"
                android:padding="10dp"
                android:text="+"
                android:textSize="20sp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/dinner_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="32dp"
                android:text='Dinner'
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dinner_cal_text_view"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="60dp"
                android:layout_toRightOf="@id/dinner_text_view"
                android:text="cal"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id='@+id/dinner'
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="42dp"
                android:layout_toRightOf="@id/dinner_cal_text_view"
                android:padding="10dp"
                android:text="+"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/dinner"
                android:text="" />

            <Button
                android:id='@+id/submit'
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text"
                android:layout_marginTop="30dp"
                android:padding="10dp"
                android:text="Total Calories"
                android:textSize="20sp" />

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>