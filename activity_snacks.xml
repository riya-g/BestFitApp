<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Snacks">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text"
        android:text='What did you eat for snacks?'
        android:textSize="20sp"
        android:textAllCaps="true"
        android:textStyle="italic|bold"/>


    <CheckBox
        android:id='@+id/tea'
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="selectItem1"
        android:layout_below="@id/text"
        android:layout_marginTop="40dp"
        android:text='Tea with milk and sugar' />

    <CheckBox
        android:id='@+id/coffee'
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="selectItem2"
        android:text='Coffee with milk and sugar'
        android:layout_marginTop="20dp"
        android:layout_below="@id/tea"/>

    <CheckBox
        android:id='@+id/fruits'
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="selectItem3"
        android:text='Fruits and Nuts'
        android:layout_marginTop="20dp"
        android:layout_below="@id/coffee"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="sendSelected"
        android:text='Done'
        android:layout_marginTop="20dp"
        android:layout_below="@id/fruits"
        android:background="#FF4500"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>


</LinearLayout>